{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node", "vite/client", "vitepress-theme-async"],
    "allowImportingTsExtensions": true
  },
  "include": ["docs", "docs/.vitepress"],
  "exclude": ["node_modules", "dist"]
}
